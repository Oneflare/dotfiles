# === Aliases ===

# Greg's most important alias
alias cl='clear'

# = Shortcuts =
alias d="cd ~/Documents"
alias lib="cd ~/Library"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias h="history"
alias j="jobs"
alias e='"$EDITOR"'

# = Navigation =
alias o="open"
alias oo="open ."

# = App Shortcuts =
# Pretty 'ls'
alias l="exa -abghl --git"

# = Utils =
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en1"
alias ips="ifconfig -a | grep -o 'inet6\? \(\([0-9]\+\.[0-9]\+\.[0-9]\+\.[0-9]\+\)\|[a-fA-F0-9:]\+\)' | sed -e 's/inet6* //'"

# Copy public key to clipboard
alias pubkey="more ~/.ssh/id_rsa.pub | pbcopy | echo '=> Public key copied to clipboard.'"

# = OSX =
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"
alias spotoff="sudo mdutil -a -i off"
alias spoton="sudo mdutil -a -i on"
alias stfu="osascript -e 'set volume output muted true'"
alias pumpitup="osascript -e 'set volume 7'"
alias cleanup_dsstore="find . -name '*.DS_Store' -type f -ls -delete"

# Update brew packages and casks
alias brew_update="brew update; brew upgrade; brew cleanup; brew cu --cleanup --yes"

# Lock the screen (when going AFK)
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

# Download file and save it with filename of remote file
alias get="curl -O -L"

alias hosts='sudo $EDITOR /etc/hosts'
alias flushdns="dscacheutil -flushcache"

# when brew install is really needed
alias subrew='brew'

# Get summary of diff between master and production branch (for deployment)
alias deploydiff='git log production..master --pretty=format:"%h%x09%an%x09%s"'
